<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <%= image_tag @post.file.public_url("scale_crop/500x200", "effect/grayscale/") %>
</p>
<p>UUID: <%= @post.file.file_id %></p>
<p>Size: <%= @post.file.api.size %> byte(s)</p>

<p>longitude: <%= @post.longitude if @post.respond_to? :longitude%></p>
<p>latitude: <%= @post.latitude if @post.respond_to? :latitude %></p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
